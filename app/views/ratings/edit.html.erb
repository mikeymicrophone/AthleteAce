<% content_for :title, "Edit Rating" %>

<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-3xl mb-6">Edit Rating</h1>

  <div class="bg-white rounded-lg shadow-md overflow-hidden p-6 mb-6">
    <div class="mb-6">
      <h2 class="font-semibold text-xl mb-2">
        <% if @rating.target_type == 'Player' %>
          <%= link_to @rating.target.name, player_path(@rating.target), class: "text-blue-600 hover:underline" %>
          <span class="text-gray-500 text-sm">(Player)</span>
        <% elsif @rating.target_type == 'Team' %>
          <%= link_to @rating.target.name, team_path(@rating.target), class: "text-blue-600 hover:underline" %>
          <span class="text-gray-500 text-sm">(Team)</span>
        <% end %>
      </h2>
    </div>

    <h2 class="font-semibold text-xl mb-4">Update Your Rating</h2>
    <%= render "form", rating: @rating, spectrum: @spectrum, 
               url: rating_path(@rating), 
               cancel_path: rating_path(@rating) %>
  </div>
</div>
