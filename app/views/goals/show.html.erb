<% content_for :title, "Goal: #{@goal.quest.name}" %>

<div class="w-full goal-container">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="font-bold text-4xl text-gray-900"><%= @goal.quest.name %></h1>
      <p class="text-gray-600 mt-2">Personal Goal Progress</p>
    </div>
    
    <div class="flex space-x-3">
      <%= link_to "View Quest", @goal.quest, 
          class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
      <%= link_to "All Goals", goals_path, 
          class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 text-gray-700 font-medium" %>
    </div>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
    <div class="flex items-center space-x-3 mb-4">
      <h2 class="text-2xl font-semibold text-gray-900">Goal Status</h2>
      
      <% case @goal.status %>
      <% when 'not_started' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
          <i class="fa-solid fa-circle-pause mr-2"></i>
          Not Started
        </span>
      <% when 'in_progress' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
          <i class="fa-solid fa-circle-play mr-2"></i>
          In Progress
        </span>
      <% when 'completed' %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
          <i class="fa-solid fa-circle-check mr-2"></i>
          Completed
        </span>
      <% end %>
    </div>
    
    <div class="space-y-4">
      <div>
        <div class="flex items-center justify-between text-lg text-gray-700 mb-2">
          <span>Progress</span>
          <span class="font-semibold">
            <%= @goal.progress %> / <%= @goal.quest.highlights.required.count %> achievements
          </span>
        </div>
        
        <div class="w-full bg-gray-200 rounded-full h-4">
          <div class="bg-blue-600 h-4 rounded-full transition-all duration-300 flex items-center justify-end pr-2" 
               style="width: <%= @goal.percent_complete %>%">
            <% if @goal.percent_complete > 15 %>
              <span class="text-xs font-semibold text-white"><%= @goal.percent_complete %>%</span>
            <% end %>
          </div>
        </div>
        
        <% if @goal.percent_complete <= 15 %>
          <div class="text-sm text-gray-600 mt-1">
            <%= @goal.percent_complete %>% complete
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">Quest Description</h2>
    <p class="text-gray-700 leading-relaxed"><%= @goal.quest.description %></p>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">Required Achievements</h2>
    
    <% if @goal.quest.highlights.required.any? %>
      <div class="space-y-3">
        <% @goal.quest.highlights.required.includes(:achievement).each do |highlight| %>
          <div class="flex items-center space-x-3 p-3 border border-gray-100 rounded-lg">
            <div class="flex-shrink-0">
              <i class="fa-solid fa-star text-yellow-500"></i>
            </div>
            <div class="flex-1">
              <h3 class="font-medium text-gray-900"><%= highlight.achievement.name %></h3>
              <p class="text-gray-600 text-sm"><%= highlight.achievement.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No required achievements for this quest.</p>
    <% end %>
  </div>

  <% if @goal.quest.highlights.optional.any? %>
    <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4">Optional Achievements</h2>
      
      <div class="space-y-3">
        <% @goal.quest.highlights.optional.includes(:achievement).each do |highlight| %>
          <div class="flex items-center space-x-3 p-3 border border-gray-100 rounded-lg">
            <div class="flex-shrink-0">
              <i class="fa-regular fa-star text-gray-400"></i>
            </div>
            <div class="flex-1">
              <h3 class="font-medium text-gray-900"><%= highlight.achievement.name %></h3>
              <p class="text-gray-600 text-sm"><%= highlight.achievement.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @goal.status != 'completed' %>
    <div class="flex justify-end space-x-3">
      <%= link_to goal_path(@goal), 
          method: :delete, 
          class: "rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium",
          confirm: "Are you sure you want to abandon this quest? This action cannot be undone.",
          title: "Abandon Quest" do %>
        <i class="fa-solid fa-trash mr-2"></i>
        Abandon Quest
      <% end %>
    </div>
  <% end %>
</div>