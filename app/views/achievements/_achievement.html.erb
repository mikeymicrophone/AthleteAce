<div id="<%= dom_id achievement %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= achievement.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= achievement.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Quest:</strong>
    <%= link_to_name achievement.quest %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Target:</strong>
    <%= link_to_name achievement.target %>
  </div>
</div>
