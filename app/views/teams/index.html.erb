<p style="color: green"><%= notice %></p>

<% content_for :title, "Teams" %>

<h1>Teams</h1>

<div id="teams">
  <% @teams.each do |team| %>
    <%= tag.div(id: dom_id(team), class: [index_record_base_classes, team_index_record_classes].join(' ')) do %>
  <%= render team %>
<% end %>
    <p>
      <%= link_to "Show this team", team %>
    </p>
  <% end %>
</div>

<%= link_to "New team", new_team_path %>
