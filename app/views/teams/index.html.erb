<p style="color: green"><%= notice %></p>

<% content_for :title, "Teams" %>

<div class="mb-4 flex gap-2">
  <div class="text-sm text-gray-600">Sort by:</div>
  <%= link_to "Mascot", teams_path(sort: "mascot"), class: "text-sm text-blue-600 hover:underline #{params[:sort] == 'mascot' ? 'font-bold' : ''}" %>
  <%= link_to "Territory", teams_path(sort: "territory"), class: "text-sm text-blue-600 hover:underline #{params[:sort] == 'territory' ? 'font-bold' : ''}" %>
  <%= link_to "Sport", teams_path(sort: "sport"), class: "text-sm text-blue-600 hover:underline #{params[:sort] == 'sport' ? 'font-bold' : ''}" %>
  <%= link_to "City", teams_path(sort: "city"), class: "text-sm text-blue-600 hover:underline #{params[:sort] == 'city' ? 'font-bold' : ''}" %>
</div>

<div id="teams">
  <% @teams.each do |team| %>
    <%= tag.div(id: dom_id(team), class: [index_record_base_classes, team_index_record_classes].join(' ')) do %>
      <div class="flex items-center gap-4">
        <%= image_tag team.logo_url, class: "h-12 w-12 object-contain rounded bg-white border border-gray-200 shadow" if team.logo_url.present? %>
        <div>
          <div class="text-xl font-semibold text-gray-900"><%= link_to_name team %></div>
          <div class="text-sm text-gray-500 mt-1">
            <span><%= link_to_name team.stadium %></span>
            <span class="mx-2">&bull;</span>
            <span><%= link_to_name team.league %></span>
          </div>
        </div>
        <%= render "shared/rating_slider", target: team, spectrums: @spectrums %>
        <%= link_to pluralize(team.players.count, "player"), [team, :players] %>
      </div>
    <% end %>
  <% end %>
</div>
