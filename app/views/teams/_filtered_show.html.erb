<%# Filtered view for team show page %>

<%= render "shared/filtered_show_header", 
    resource: @team, 
    filtered_breadcrumb: @filtered_breadcrumb,
    current_filters: @current_filters,
    resource_type: :teams,
    metadata: capture { %>
      <% if @team.league %>
        <%= tag.div class: "flex items-center px-3 py-1 bg-gray-100 rounded-full text-sm" do %>
          <%= tag.span "League:", class: "mr-1 text-gray-500" %>
          <%= link_to @team.league.name, league_path(@team.league), class: "text-blue-600 hover:text-blue-800" %>
        <% end %>
      <% end %>
      
      <% if @team.division.present? %>
        <%= tag.div class: "px-3 py-1 bg-gray-100 rounded-full text-sm" do %>
          <%= tag.span "Division:", class: "mr-1 text-gray-500" %>
          <%= link_to @team.division.name, division_path(@team.division), class: "text-blue-600 hover:text-blue-800" %>
        <% end %>
      <% end %>
      
      <% if @team.conference.present? %>
        <%= tag.div class: "px-3 py-1 bg-gray-100 rounded-full text-sm" do %>
          <%= tag.span "Conference:", class: "mr-1 text-gray-500" %>
          <%= link_to @team.conference.name, conference_path(@team.conference), class: "text-blue-600 hover:text-blue-800" %>
        <% end %>
      <% end %>
    <% } %>
