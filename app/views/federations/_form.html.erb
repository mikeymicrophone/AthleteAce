<%= form_with(model: federation, class: "contents") do |form| %>
  <% if federation.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(federation.errors.count, "error") %> prohibited this federation from being saved:</h2>

      <ul class="list-disc ml-6">
        <% federation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": federation.errors[:name].none?, "border-red-400 focus:outline-red-600": federation.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :abbreviation %>
    <%= form.text_field :abbreviation, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": federation.errors[:abbreviation].none?, "border-red-400 focus:outline-red-600": federation.errors[:abbreviation].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": federation.errors[:description].none?, "border-red-400 focus:outline-red-600": federation.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :url %>
    <%= form.text_field :url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": federation.errors[:url].none?, "border-red-400 focus:outline-red-600": federation.errors[:url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :logo_url %>
    <%= form.text_field :logo_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": federation.errors[:logo_url].none?, "border-red-400 focus:outline-red-600": federation.errors[:logo_url].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
