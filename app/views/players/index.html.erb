<% content_for :title, "Players" %>

<%= player_sort_links %>

<%= render_floating_spectrum_picker %>

<%= pagy_nav(@pagy).html_safe %>

<%= index_collection("players") do %>
  <% @players.each do |player| %>
    <%= index_record(player, "player-record") do %>
      <%= record_info_section do %>
        <%= player_info_display(player) %>
      <% end %>
      
      <%= rating_slider_container(player, selected_spectrums) %>
      
      <%= record_stats_section do %>
        <%= ratings_stats_display(player) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= pagy_nav(@pagy).html_safe %>
