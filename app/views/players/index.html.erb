<p style="color: green"><%= notice %></p>

<% content_for :title, "Players" %>

<div class="flex justify-between items-center mb-4">
  <h1 class="text-2xl font-bold">Players</h1>
  
  <% if params[:team_id].present? %>
    <div class="text-lg font-medium">
      Team: <%= link_to @team.name, @team, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>

<!-- New Floating Spectrum Picker -->
<div data-controller="spectrum-picker" class="fixed top-4 right-4 z-50 bg-white p-3 rounded-lg shadow-xl border border-gray-200 w-64 sm:w-72 md:w-80">
  <%= form_with url: url_for, method: :get, local: true, data: { spectrum_picker_target: "form" } do |form| %>
    
    <!-- Collapsed View / Toggle Button -->
    <div class="flex justify-between items-center cursor-pointer" data-action="click->spectrum-picker#toggleExpand">
      <span class="text-sm font-medium text-gray-700 truncate pr-2" data-spectrum-picker-target="summaryDisplay">
        Spectrums: <%= selected_spectrums.any? ? selected_spectrums.map { |s| s.name.sub(/\s*\(.*\)\s*$/, '').strip }.join(', ') : "None" %>
      </span>
      <svg data-spectrum-picker-target="toggleIcon" class="w-5 h-5 text-gray-500 transform transition-transform duration-150" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
    </div>

    <!-- Expandable Content -->
    <div data-spectrum-picker-target="expandableContent" class="hidden mt-3 pt-3 border-t border-gray-200">
      
      <!-- Multi-select Toggle -->
      <div class="mb-3">
        <label class="flex items-center text-sm text-gray-700 cursor-pointer">
          <input type="checkbox" 
                 data-spectrum-picker-target="multiSelectToggle" 
                 data-action="change->spectrum-picker#handleMultiSelectToggle"
                 class="form-checkbox h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                 <%= 'checked' if selected_spectrum_ids.count > 1 || (selected_spectrum_ids.empty? && default_spectrums.count > 1 && default_spectrums.any?) %>>
          <span class="ml-2">Enable Multi-select</span>
        </label>
      </div>

      <!-- Spectrum Checkboxes -->
      <div class="space-y-2 max-h-48 overflow-y-auto mb-3" data-spectrum-picker-target="checkboxContainer">
        <%# Hidden input to ensure spectrum_ids[] is submitted as an empty array if no checkboxes are checked, to clear selection on the server %>
        <%= form.hidden_field :spectrum_ids, value: '', name: 'spectrum_ids[]', id: nil %>

        <% default_spectrums.each do |spectrum| %>
          <label class="flex items-center text-sm text-gray-700 cursor-pointer">
            <input type="checkbox" 
                   name="spectrum_ids[]" 
                   value="<%= spectrum.id %>"
                   class="form-checkbox h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 spectrum-checkbox"
                   data-spectrum-picker-target="spectrumCheckbox"
                   data-action="change->spectrum-picker#handleCheckboxChange"
                   data-spectrum-id="<%= spectrum.id %>"
                   <%= 'checked' if selected_spectrum_ids.include?(spectrum.id) %>>
            <span class="ml-2"><%= spectrum.name.sub(/\s*\(.*\)\s*$/, '').strip %></span>
          </label>
        <% end %>
      </div>
      
      <!-- Apply Button -->
      <div>
        <%= form.submit "Apply Filters", class: "w-full px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2", data: { action: "click->spectrum-picker#submitForm" } %>
      </div>
    </div>
  <% end %>
</div>

<div id="players" class="space-y-4">
  <% @players.each do |player| %>
    <%= tag.div(id: dom_id(player), class: [index_record_base_classes, player_index_record_classes, "grid grid-cols-3 gap-4 items-center p-4 rounded-lg shadow-sm"].join(' ')) do %>
      <div class="player-info">
        <div class="font-medium text-lg"><%= link_to_name player %></div>
        <div class="text-sm text-gray-600">
          <%= link_to_name player.team %> | 
          <%= link_to_name player.league %> | 
          <%= link_to_name player.sport %>
        </div>
        <% if player.primary_position %>
          <div class="text-xs mt-1 inline-block bg-gray-100 px-2 py-0.5 rounded">
            <%= player.primary_position.name %>
          </div>
        <% end %>
      </div>
      
      <div class="rating-container col-span-3 sm:col-span-1">
        <%= render partial: "shared/rating_slider", locals: { target: player, selected_spectrums: selected_spectrums } %>
      </div>
      
      <div class="player-stats text-right">
        <% if player.ratings.any? %>
          <div class="text-sm">
            <span class="font-medium"><%= player.ratings.count %></span> ratings
          </div>
          <% player.ratings.group(:spectrum_id).count.first(3).each do |spectrum_id, count| %>
            <% spectrum = Spectrum.find(spectrum_id) %>
            <div class="text-xs text-gray-600">
              <%= spectrum.name %>: <%= player.normalized_average_rating_on(spectrum)&.*(100)&.round || 'N/A' %>%
            </div>
          <% end %>
        <% else %>
          <div class="text-sm text-gray-500 italic">No ratings yet</div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="mt-6">
  <%= pagy_nav(@pagy).html_safe %>
</div>

<div class="mt-4">
  <%= link_to "New player", new_player_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
</div>
