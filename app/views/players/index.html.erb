<p style="color: green"><%= notice %></p>

<% content_for :title, "Players" %>

<div class="flex justify-between items-center mb-4">
  <h1 class="text-2xl font-bold">Players</h1>
  
  <% if params[:team_id].present? %>
    <div class="text-lg font-medium">
      Team: <%= link_to @team.name, @team, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>

<%# Page-level Spectrum Picker %>
<div class="mb-6 p-4 border rounded-lg shadow-sm bg-gray-50">
  <%= form_with url: url_for, method: :get, local: true, data: { controller: 'autosubmit' } do |form| %>
    <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
      <div class="flex-grow mb-2 sm:mb-0">
        <%= form.label :spectrum_ids, "Select Spectrums (up to 4):", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :spectrum_ids, 
                        options_for_select(spectrum_picker_options, selected_spectrum_ids), 
                        { include_blank: false }, 
                        { multiple: true, 
                          size: default_spectrums.count > 4 ? 4 : default_spectrums.count, 
                          class: "block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                          data: { action: 'change->autosubmit#submit' } 
                        }
        %>
        <%# Hidden field to ensure spectrum_ids is submitted even if empty, to clear selection %>
        <%= form.hidden_field :spectrum_ids, value: '', multiple: true unless selected_spectrum_ids.present? %> 
      </div>
      <div class="mt-2 sm:mt-0">
        <%# The form auto-submits, but a manual button can be useful for accessibility or if JS fails %>
        <%# form.submit "Update Spectrums", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
  <p class="text-xs text-gray-500 mt-1">Ratings will update automatically when spectrum selection changes.</p>
</div>

<div id="players" class="space-y-4">
  <% @players.each do |player| %>
    <%= tag.div(id: dom_id(player), class: [index_record_base_classes, player_index_record_classes, "grid grid-cols-3 gap-4 items-center p-4 rounded-lg shadow-sm"].join(' ')) do %>
      <div class="player-info">
        <div class="font-medium text-lg"><%= link_to_name player %></div>
        <div class="text-sm text-gray-600">
          <%= link_to_name player.team %> | 
          <%= link_to_name player.league %> | 
          <%= link_to_name player.sport %>
        </div>
        <% if player.primary_position %>
          <div class="text-xs mt-1 inline-block bg-gray-100 px-2 py-0.5 rounded">
            <%= player.primary_position.name %>
          </div>
        <% end %>
      </div>
      
      <div class="rating-container col-span-3 sm:col-span-1">
        <%= render partial: "shared/rating_slider", locals: { target: player, selected_spectrums: selected_spectrums } %>
      </div>
      
      <div class="player-stats text-right">
        <% if player.ratings.any? %>
          <div class="text-sm">
            <span class="font-medium"><%= player.ratings.count %></span> ratings
          </div>
          <% player.ratings.group(:spectrum_id).count.first(3).each do |spectrum_id, count| %>
            <% spectrum = Spectrum.find(spectrum_id) %>
            <div class="text-xs text-gray-600">
              <%= spectrum.name %>: <%= player.normalized_average_rating_on(spectrum)&.*(100)&.round || 'N/A' %>%
            </div>
          <% end %>
        <% else %>
          <div class="text-sm text-gray-500 italic">No ratings yet</div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="mt-6">
  <%= pagy_nav(@pagy).html_safe %>
</div>

<div class="mt-4">
  <%= link_to "New player", new_player_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
</div>
