<% content_for :title, "Seasons" %>

<%= tag.div class: "w-full" do %>
  <%= index_header "Seasons" %>
  
  <%= index_collection "seasons" do %>
    <% @seasons.each do |season| %>
      <%= index_record season do %>
        <%= record_info_section do %>
          <%= record_name link_to(season.name, season, class: "text-blue-600 hover:underline") %>
          <%= record_metadata season.display_year %>
        <% end %>
        
        <%= record_content_section do %>
          <%= tag.div class: "grid grid-cols-2 gap-4 text-sm" do %>
            <%= tag.div do %>
              <%= tag.span "League: ", class: "font-medium text-gray-700" %>
              <%= tag.span season.league.name, class: "text-gray-600" %>
            <% end %>
            <%= tag.div do %>
              <%= tag.span "Status: ", class: "font-medium text-gray-700" %>
              <%= tag.span season.status.humanize, class: "text-gray-600" %>
            <% end %>
          <% end %>
          <% if season.start_date %>
            <%= tag.p class: "text-gray-600 text-sm mt-2" do %>
              <%= "Season: #{season.start_date.strftime('%b %d, %Y')}" %>
              <%= " - #{season.end_date.strftime('%b %d, %Y')}" if season.end_date %>
            <% end %>
          <% end %>
        <% end %>
        
        <%= record_actions_section do %>
          <%= link_to "View Details", season, class: "btn btn-outline text-sm" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  
  <%== pagy_nav @pagy if @pagy.pages > 1 %>
<% end %>
