<div id="<%= dom_id quest %>" class="w-full sm:w-auto my-5 space-y-3 quest-card p-4">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h3 class="text-xl font-bold text-gray-900 mb-1"><%= quest.name %></h3>
      <div class="flex items-center space-x-2 text-sm text-gray-500">
        <%= quest_participants_badge(quest) %>
        <% if quest.highlights.required.any? %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
            <i class="fa-solid fa-star mr-1"></i>
            <%= pluralize(quest.highlights.required.count, 'achievement') %> required
          </span>
        <% end %>
      </div>
    </div>
    
    <div class="mt-3 sm:mt-0">
      <%= begin_quest_button(quest) %>
    </div>
  </div>
  
  <div class="text-gray-700">
    <%= quest.description %>
  </div>
</div>
