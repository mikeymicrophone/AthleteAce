<%= tag.header @state.name, class: "state-name" %>
<%= display_name_with_lazy_logo @state.country, logo_attribute: :flag_url %>

<%= tag.div class: "cities" do %>
  <%= pluralize @state.cities.count, "City" %>
  <% @state.cities.each do |city| %>
    <%= display_name_with_lazy_logo city %>
  <% end %>
<% end %>

<%= tag.div class: "stadiums" do %>
  <%= pluralize @state.stadiums.count, "Stadium" %>
  <% @state.stadiums.each do |stadium| %>
    <%= display_name_with_lazy_logo stadium %>
  <% end %>
<% end %>

<%= tag.div class: "teams" do %>
  <%= pluralize @state.teams.count, "Team" %>
  <% @state.teams.each do |team| %>
    <%= display_name_with_lazy_logo team %>
    <%= display_name_with_lazy_logo team.league %>
    <%= display_name_with_lazy_logo team.sport %>
    <%= tag.div class: "players" do %>
      <%= pluralize team.players.count, "#{team.sport.name} Player" %>
      <% team.players.each do |player| %>
        <%= display_name_with_lazy_logo player %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
