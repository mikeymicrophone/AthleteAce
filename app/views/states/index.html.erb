<p style="color: green"><%= notice %></p>

<% content_for :title, "States" %>

<h1>States</h1>

<div id="states">
  <% @states.each do |state| %>
    <%= tag.div(id: dom_id(state), class: [index_record_base_classes, state_index_record_classes].join(' ')) do %>
  <%= render state %>
<% end %>
    <p>
      <%= link_to "Show this state", state %>
    </p>
  <% end %>
</div>

<%= link_to "New state", new_state_path %>
