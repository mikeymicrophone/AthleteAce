<%# Filter UI partial for leagues index %>

<%= render "shared/filter_panel", 
    resource: :leagues, 
    current_filters: @current_filters,
    filter_options: @filter_options %>

<%# Add top-level navigation for different resource types %>
<%= filterable_navigation :leagues, @current_filters if @current_filters.present? %>

<%# If any filters are applied, show context-specific related resources %>
<%= filterable_context_nav :leagues, @current_filters if @current_filters.present? %>

<%# Summary of active filters %>
<% if @current_filters.present? %>
  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-2">
      <%= pluralize @leagues.size, 'league' %> 
      <%= "in #{@current_filters.values.map(&:name).to_sentence}" %>
    </h2>
  </div>
<% end %>
