<% content_for :title, @league.name %>

<%= tag.header @league.name, class: "league-name" %>

<%= render 'filtered_show' if @filtered_breadcrumb.present? %>

<%= display_name_with_lazy_logo @league.jurisdiction, logo_attribute: :flag_url %>
<%= display_name_with_lazy_logo @league.sport, logo_attribute: :icon_url %>

<%= render_collection(@league.conferences) %>

<%= render_collection(@league.divisions) %>

<%= render_teams_collection(@league.teams, parent: @league) %>

<%= render_players_collection(@league.players, parent: @league, link_to_collection: true) %>
