<% content_for :title, @division.present? ? "#{@division.name} Division Quiz - Team Match" : "Team Match - Strength Training" %>

<div class="team-match-container" data-controller="team-match">
  <% if flash[:alert].present? %>
    <div class="flash-message alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- Filter indicators section -->
  <div class="filter-indicators mb-4">
    <% if @division.present? %>
      <div class="filter-indicator">
        <div class="filter-badge division-badge">
          <span class="filter-label">Division Quiz:</span>
          <span class="filter-value"><%= @division.name %></span>
        </div>
      </div>
      <div class="filter-indicator">
        <div class="filter-badge">
          <span class="filter-label">Conference:</span>
          <span class="filter-value"><%= @division.conference.name %></span>
        </div>
      </div>
      <div class="filter-indicator">
        <div class="filter-badge">
          <span class="filter-label">League:</span>
          <span class="filter-value"><%= @division.conference.league.name %></span>
        </div>
      </div>
    <% else %>
      <% if @team_id.present? %>
        <div class="filter-indicator">
          <div class="filter-badge">
            <span class="filter-label">Team:</span>
            <% team = Team.find_by(id: @team_id) %>
            <span class="filter-value"><%= team ? "#{team.territory} #{team.mascot}" : "Unknown Team" %></span>
          </div>
        </div>
      <% end %>
      
      <% if @sport_id.present? %>
        <div class="filter-indicator">
          <div class="filter-badge">
            <span class="filter-label">Sport:</span>
            <% sport = Sport.find_by(id: @sport_id) %>
            <span class="filter-value"><%= sport ? sport.name : "Unknown Sport" %></span>
          </div>
        </div>
      <% end %>
      
      <% if @league_id.present? %>
        <div class="filter-indicator">
          <div class="filter-badge">
            <span class="filter-label">League:</span>
            <% league = League.find_by(id: @league_id) %>
            <span class="filter-value"><%= league ? league.name : "Unknown League" %></span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Main game container -->
  <div class="team-match-game" data-team-match-target="gameContainer">
    <!-- Player info -->
    <div class="player-info mb-6 text-center">
      <% if @division.present? %>
        <h2 class="text-2xl font-bold mb-2">Which <%= @division.name %> Division team does this player play for?</h2>
      <% else %>
        <h2 class="text-2xl font-bold mb-2">Which team does this player play for?</h2>
      <% end %>
      <div class="player-card bg-white rounded-lg shadow-lg p-4 max-w-md mx-auto">
        <% if @current_player.photo_urls.present? %>
          <div class="player-image-container h-64 mb-4">
            <img src="<%= @current_player.photo_urls.first %>" alt="<%= @current_player.full_name %>" class="h-full mx-auto object-contain">
          </div>
        <% else %>
          <div class="player-image-placeholder h-64 mb-4 bg-gray-200 flex items-center justify-center">
            <i class="fa-solid fa-user text-6xl text-gray-400"></i>
          </div>
        <% end %>
        <h3 class="text-xl font-bold"><%= @current_player.full_name %></h3>
        <% if @current_player.primary_position %>
          <p class="text-gray-600"><%= @current_player.primary_position.name %></p>
        <% end %>
      </div>
    </div>

    <!-- Team choices grid -->
    <div class="team-choices-grid grid grid-cols-2 gap-4 max-w-2xl mx-auto" data-team-match-target="choicesGrid">
      <% @team_choices.each do |team| %>
        <button 
          class="team-choice bg-white rounded-lg shadow-md p-4 flex flex-col items-center transition-all duration-300 hover:shadow-lg"
          data-team-match-target="teamChoice"
          data-team-id="<%= team.id %>"
          data-correct="<%= team.id == @correct_team.id %>"
          data-action="click->team-match#checkAnswer">
          
          <div class="team-logo-container h-24 w-24 mb-2">
            <% if team.logo_url.present? %>
              <img src="<%= team.logo_url %>" alt="<%= team.name %> logo" class="h-full w-full object-contain">
            <% else %>
              <div class="team-logo-placeholder h-full w-full bg-gray-200 flex items-center justify-center rounded-full">
                <i class="fa-solid fa-shield-alt text-4xl text-gray-400"></i>
              </div>
            <% end %>
          </div>
          
          <span class="team-name text-lg font-medium"><%= "#{team.territory} #{team.mascot}" %></span>
        </button>
      <% end %>
    </div>

    <!-- Floating team name overlay (hidden by default) -->
    <div class="team-name-overlay fixed inset-0 flex items-center justify-center pointer-events-none opacity-0 z-50" data-team-match-target="teamNameOverlay">
      <div class="team-name-content text-8xl font-extrabold text-center text-white text-shadow-lg">
        <span data-team-match-target="teamNameText"></span>
      </div>
    </div>

    <!-- Controls -->
    <div class="controls flex justify-between items-center mt-8">
      <div class="progress">
        <span class="text-gray-600">Progress: <span data-team-match-target="progressCounter">0</span> correct</span>
      </div>
      
      <div class="pause-button">
        <button 
          class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors duration-200"
          data-team-match-target="pauseButton"
          data-action="click->team-match#togglePause">
          <i class="fa-solid fa-pause mr-2"></i> Pause
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .team-name-overlay {
    background-color: rgba(0, 0, 0, 0.5);
    transition: opacity 0.5s ease;
  }
  
  .text-shadow-lg {
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }
  
  .team-choice.correct {
    background-color: #10b981;
    color: white;
    transform: scale(1.05);
  }
  
  .team-choice.incorrect {
    background-color: #ef4444;
    color: white;
  }
  
  .team-choice.correct-answer {
    background-color: #10b981;
    color: white;
    border: 3px solid #fff;
    box-shadow: 0 0 0 2px #10b981, 0 0 15px rgba(16, 185, 129, 0.7);
  }
  
  @keyframes pulse {
    0% { transform: scale(1.05); background-color: #10b981; }
    50% { transform: scale(1.1); background-color: #059669; }
    100% { transform: scale(1.05); background-color: #10b981; }
  }
  
  .team-choice.pulsing {
    animation: pulse 1.5s ease-in-out;
  }
</style>
