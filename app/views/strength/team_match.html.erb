<% content_for :title, @division.present? ? "#{@division.name} Division Quiz - Team Match" : "Team Match - Strength Training" %>

<%= game_container(@current_player, @correct_team, @team_choices, @parent) do %>
  <%= turbo_frame_tag "team_match_game" do %>
    <%= game_layout do %>
      <%= player_card_section(@current_player) %>
      <%= team_choices_section(@team_choices, @correct_team.id) %>
    <% end %>
  <% end %>

  <%= progress_indicator %>
  <%= attempts_history_container %>
<% end %>
