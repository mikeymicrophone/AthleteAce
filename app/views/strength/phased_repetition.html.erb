<div class="player-info" 
  data-controller="name-pulse"
  data-name-pulse-sequence-value='{
    "initialDelay": 1000,
    "firstName": {
      "growDuration": 500,
      "holdDuration": 500
    },
    "pause": 800,
    "lastName": {
      "growDuration": 800,
      "holdDuration": 800
    }
  }'>
  <%= tag.div(@current_player.first_name, 
              id: dom_id(@current_player, :first_name_of), 
              class: "name-part first-name",
              data: { name_pulse_target: "firstName" }) %>
  <%= tag.div(@current_player.last_name, 
              id: dom_id(@current_player, :last_name_of), 
              class: "name-part last-name",
              data: { name_pulse_target: "lastName" }) %>
  <%= tag.div("is on the ", id: dom_id(@current_player, :is_on_the)) %>
  <%= tag.div(link_to_name(@current_player.team), id: dom_id(@current_player, :team_of)) %>
</div>

<style>
  .player-info {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    font-size: 1.5rem;
    margin: 2rem 0;
  }
  
  .name-part {
    font-weight: bold;
    display: inline-block;
    transform-origin: center;
  }
  
  .first-name {
    color: #3498db;
  }
  
  .last-name {
    color: #e74c3c;
  }
  
  .pulse-grow {
    animation: pulse-grow-animation var(--grow-duration, 500ms) ease-in-out forwards;
  }
  
  .pulse-shrink {
    animation: pulse-shrink-animation var(--shrink-duration, 300ms) ease-in-out forwards;
  }
  
  @keyframes pulse-grow-animation {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.5);
    }
  }
  
  @keyframes pulse-shrink-animation {
    0% {
      transform: scale(1.5);
    }
    100% {
      transform: scale(1);
    }
  }
</style>
